---
import { Initializer } from "../components/Initializer";
import Footer from "./footer/Footer.astro";
import Header from "./navBar/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth font-roboto">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Portfolio of MartÃ­n Morales, web developer"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-r from-rich_black-100 via-vanilla-700 to-rich_black-100">
		<div
			id="load"
			class="bg-[url('/loading.svg')] bg-[length:50%_50%] bg-no-repeat bg-center flex items-center justify-center h-screen w-screen"
		>
		</div>
		<Initializer client:load />
		<div id="content" class="bg-vanilla dark:bg-rich_black hidden">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>

	<style></style>
</html>
